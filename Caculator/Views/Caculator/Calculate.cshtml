@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Máy tính</h2>

<form asp-controller="Caculator" asp-action="Calculate" method="get">
    <div class="row">
    <div class="col-2">
        <label>Số A:</label> <br />
        <input type="number" name="a" />
    </div>
    
    <div class="col-1 text-center">
        <label>Phép toán:</label>
        <select name="o">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value=":">:</option>
        </select>
    </div>

        <div class="col-2">
            <label>Số B:</label>
            <input type="number" name="b" />
        </div>

        <div class="col-1 text-center">
            <button class="btn btn-primary mt-3" type="submit">=</button>
        </div>
    
  
    
<div class="col-1 mt-3">
    @if (ViewBag.ketQua != null)
    {
        <h3>@ViewBag.ketQua</h3>
    }
        </div>
    </div>
</form>


