@{
    ViewData["Title"] = "UploadFiles";
}

<h1>Upload Files</h1>

<div class="row">
    <div class="col-3">
        <form asp-controller="Upload" asp-action="UploadFiles" method="post" enctype="multipart/form-data">
            <div>Hình ảnh</div>
            <input name="image" type="file" />
            @if (ViewBag.fileName != null){
            @if (ViewBag.ImageType.ToString().StartsWith("image"))
            {
                <img src="@ViewBag.ImagePath" alt="Uploaded Image" style="max-width:300px;" />
            }
            }
            <div>Tài liệu</div>
            <input name="document" type="file" />
            @if (ViewBag.fileName != null)
            {
                <h4>File detail</h4>
                <p>Tên: @ViewBag.fileName</p>
                <p>Loại: @ViewBag.fileType</p>
                <p>Kích thước: @ViewBag.fileSize bytes</p>
                <a href="@ViewBag.filePath" download>Tải file</a>
            }
            <hr />
            <input value="upload" type="submit" />
        </form>
    </div>
    <div class="col-3">
        
    </div>
</div>




